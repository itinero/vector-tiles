<!DOCTYPE html>
<html>
<head>
    <meta charset='utf-8' />
    <title>Display a map</title>
    <meta name='viewport' content='initial-scale=1,maximum-scale=1,user-scalable=no' />
    <script src='/mapbox-gl-js/v0.45.0/mapbox-gl.js'></script>
    <link href='/mapbox-gl-js/v0.45.0/mapbox-gl.css' rel='stylesheet' />
    <script src='/mapbox-gl-inspect/mapbox-gl-inspect.min.js'></script>
    <link href='/mapbox-gl-inspect/mapbox-gl-inspect.css' rel='stylesheet' />
    <style>
        body { margin:0; padding:0; }
        #map { position:absolute; top:0; bottom:0; width:100%; }
    </style>
</head>
<body>
    <div id='map'></div>
    <script>
        var map = new mapboxgl.Map({
            container: 'map', // container id
            style: '/style.json', // stylesheet location
            center: [4.78639, 51.2634], // starting position [lng, lat]
            zoom: 15 // starting zoom
        });

        map.addControl(new MapboxInspect({
            showInspectMap: true
        }));
    </script>
</body>
</html>